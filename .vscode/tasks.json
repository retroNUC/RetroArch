{
   "version": "2.0.0",
   "tasks": [
      {
         "label": "msys2-mingw64 build",
         "type": "shell",
         "group": "build",
         "command": "make -j4",
         "options": {
            "shell": {
               "executable": "C:\\tools\\msys64\\usr\\bin\\bash.exe",
               "args": [
                  "-c"
               ]
            }
         }
      },
      {
         "label": "msys2-mingw64 configure",
         "type": "shell",
         "group": "build",
         "command": "./configure",
         "options": {
            "shell": {
               "executable": "C:\\tools\\msys64\\msys2_shell.cmd",
               "args": [
                  "-defterm", "-mingw64", "-no-start", "-here"
               ]
            }
         }
      },
      {
         "label": "msys2-mingw64 build with debug symbols",
         "type": "shell",
         "group": "build",
         "command": "DEBUG=1 make -j4",
         "options": {
            "shell": {
               "executable": "C:\\tools\\msys64\\usr\\bin\\bash.exe",
               "args": [
                  "-c"
               ]
            }
         }
      },
      {
         "label": "msys2-mingw64 rebuild",
         "type": "shell",
         "group": "build",
         "command": "make -j2",
         "options": {
            "shell": {
               "executable": "C:\\tools\\msys64\\usr\\bin\\bash.exe",
               "args": [
                  "-c"
               ]
            }
         }
      },
      {
         "label": "msys2-mingw64 clean",
         "type": "shell",
         "group": "build",
         "command": "make clean",
         "options": {
            "shell": {
               "executable": "C:\\tools\\msys64\\usr\\bin\\bash.exe",
               "args": [
                  "-c"
               ]
            }
         }
      },
      {
         "label": "msys2-mingw64 run",
         "type": "shell",
         "group": {
            "kind": "test",
            "isDefault": true
         },
         "command": "./retroarch -v",
         "options": {
            "shell": {
               "executable": "C:\\tools\\msys64\\usr\\bin\\bash.exe",
               "args": [
                  "-c"
               ]
            }
         }
      },
      {
         "type": "cppbuild",
         "label": "C/C++: g++.exe build active file",
         "command": "C:/tools/msys64/mingw64/bin/g++.exe",
         "args": [
            "-fdiagnostics-color=always",
            "-g",
            "${file}",
            "-o",
            "${fileDirname}\\${fileBasenameNoExtension}.exe"
         ],
         "options": {
            "cwd": "C:/tools/msys64/mingw64/bin"
         },
         "problemMatcher": [
            "$gcc"
         ],
         "group": {
            "kind": "build",
            "isDefault": true
         },
         "detail": "Task generated by Debugger."
      }
   ]
}